<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@color/Background">

    <EditText
        android:id="@+id/email"
        android:layout_width="347dp"
        android:layout_height="73dp"
        android:layout_marginTop="312dp"
        android:backgroundTint="@color/GuiltyPink"
        android:ems="10"
        android:hint="Email"
        android:autofillHints="ExampleEmail@gmail.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/Text"
        android:textColorHint="#737373"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="233dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:text="Submit"
        app:backgroundTint="@color/GuiltyPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Instructions"
        android:layout_width="315dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Type in E-Mail and Press Submit to Send a Password Reset Link to Your E-Mail"
        android:textColor="@color/Text"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

</androidx.constraintlayout.widget.ConstraintLayout>